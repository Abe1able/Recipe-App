<% if user_signed_in? %>
<button class="btn"><%= link_to 'New Food', new_food_path, class: "links" %></button>
<% end %>
<table>
  <thead>
  <tr>
  <th>Name</th>
  <th>Measurement_Unit </th>
  <th>Price</th>
  <th colspan="3"></th>
  </tr>
  </thead>
</table>

<tbody>
<% @foods.each  do |food|%>
<tr>
<td><%= food.name%></td>
<td><%= food.measurement_unit%></td>
<td>$<%= food.price%></td>
<td>
  <% if can? :manage, food %>
  <%= button_to 'Destroy', food_path(food), method: :delete, data: { turbo: false } %>
  <% end %>
</td>
</tr>
<%end%>
</tbody>